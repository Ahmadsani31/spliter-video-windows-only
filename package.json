{
  "name": "vid-cut-gui",
  "version": "1.2.0",
  "description": "Windows-only GUI video slicer (mp4/mkv) using ffmpeg",
  "main": "index.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {},
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.local.Vidsplit",
    "productName": "VidSplit",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "binaries/",
        "to": "binaries",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
